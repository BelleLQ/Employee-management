<div class="row">
    <div class="col-md-12">
          <h2>Employees<a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a></h2>
          <hr />
          <div class="table-responsive">
              <table class="table">
                <thead>
                    <tr>
                    <th>Employee&nbsp;Num</th>
                    <th>Full&nbsp;Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Manager&nbsp;ID</th>
                    <th>Status&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                    <th>Department</th>
                    <th>Hired&nbsp;On</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each employees}}
                    <tr>
                        <td>{{this.dataValues.employeeNum}}</td>
                        <td><a href="/employee/{{this.dataValues.employeeNum}}">{{this.dataValues.firstName}} {{this.dataValues.lastName}}</a></td>
                        <td><a href="mailto:{{this.dataValues.email}}">{{this.dataValues.email}}</a></td>
                        <td>{{this.dataValues.addressStreet}} {{this.dataValues.addressCity}} {{this.dataValues.addressState}} {{this.dataValues.addressPostal}}</td>
                        <td><a href="/employees?manager={{this.dataValues.employeeManagerNum}}">{{this.dataValues.employeeManagerNum}}</a></td>
                        <td><a href="/employees?status={{this.dataValues.status}}">{{this.dataValues.status}}</a></td>
                        <td><a href="/employees?department={{this.dataValues.department}}">{{this.dataValues.department}}</td>
                        <td>{{this.dataValues.hireDate}}</td>
                        <td><a class="btn btn-danger" href="employees/delete/{{this.dataValues.employeeNum}}">remove</a></td>
                    </tr>
                    {{/each}}
                </tbody>
              </table>
          </div>
    </div>
    {{#unless employees}}
    <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>
