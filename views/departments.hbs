<div class="row">
    <div class="col-md-12">
          <h2>Departments<a href="/departments/add" class="btn btn-success pull-right">Add New Department</a></h2>
          <hr />
          <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>Department Number</th>
                    <th>Department Name</th>
                </tr>
                    {{#each departments}}
                    <tr>
                        <td><a href="/employees?department={{this.dataValues.departmentId}}">{{this.dataValues.departmentId}}</a></td>
                        <td><a href="/department/{{this.dataValues.departmentId}}">{{this.dataValues.departmentName}}</a></td>
                         <td> <a href="/department/delete/{{this.dataValues.departmentId}}" class="btn btn-danger">remove</a></td>
                    </tr>
                    {{/each}}
            </table>
        </div>
    </div>
    {{#unless departments}}
    <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>
